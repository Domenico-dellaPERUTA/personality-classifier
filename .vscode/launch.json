    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run BackEnd (TS)",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["ts-node"],
            "args": ["src/server.ts"],
            "cwd": "${workspaceFolder}/backend",
            "skipFiles": ["<node_internals>/**"],
            "envFile": "${workspaceFolder}/backend/src/.env"
        },{
            "type": "node-terminal",
            "request": "launch",
            "name": "Run FrontEnd",
            "command": "cd ${workspaceFolder}/frontend && npm run dev"
        },{
            "type": "node-terminal",
            "request": "launch",
            "name": "Close port 3000 / 3001",
            "command": "lsof -ti:3000 | xargs kill -9; lsof -ti:3001 | xargs kill -9"
        }
    ]
}